package com.which.template{    import com.which.template.events.TemplateEvent;    import com.which.utils.Console;        import flash.display.Bitmap;    import flash.display.Loader;    import flash.display.MovieClip;    import flash.errors.IOError;    import flash.events.Event;    import flash.events.IOErrorEvent;    import flash.events.MouseEvent;    import flash.net.URLLoader;    import flash.net.URLRequest;    import flash.text.TextField;    import flash.text.TextFieldAutoSize;        import by.blooddy.crypto.serialization.JSON;        import fl.text.TextField;    public class Template extends MovieClip    {		        public var headerTLF:TextField;        public var titleTLF:TextField;        public var bodyTLF:TextField;		public var website:String = "";		public var _imageURLs:Array;		public var button:MovieClip;		public var isLoaded:Boolean;		public var background:MovieClip;        protected var body_divider_delta:Number;        protected var body_btn_delta:Number;        protected var btn_delta:Number = 0;		protected var bitmap:Bitmap;				protected var imageIndex:int = 0;		protected var data:Object;        public function Template()        {			Console.log("HELLO", this);
			init();						        }        protected function init(event:Event=null) : void        {			Console.log("Init check", this);			for (var k in root.loaderInfo)			Console.log(k+" "+root.loaderInfo[k], this);			for (var m in root.loaderInfo.parameters)				Console.log( m+" "+root.loaderInfo.parameters[m], this);			isLoaded = false;			if (this.hasOwnProperty("btn"))				this.button = this["btn"];			if (this.hasOwnProperty("bg"))				this.background = this["bg"];			this.headerTLF = this["header"];			this.titleTLF = this["title"];			this.bodyTLF = this["body"];            this.setupButton();			try			{								var dataURL:String = root.loaderInfo.parameters["dataURL"];
				//dataURL = "http://test.c-lab.co.uk/services/asset.php?contentid=3";				if (dataURL!=null)				{					dataURL = unescape(dataURL);
					Console.log( dataURL, this);								loadData( dataURL )				}			} catch (err:Error){					Console.log(err.message, this);			}			if (this.background!=null)			{				this.background.addEventListener( MouseEvent.CLICK, onBgClick);			} else {				Console.log("Background not found", this);			}			//test();        }		protected function onBgClick( e:MouseEvent ):void		{			Console.log("templateClickBg", this)			this.dispatchEvent( new TemplateEvent( TemplateEvent.CLICK_BG ));		}		public function loadData( url:String ):void		{			Console.log("URL: "+url, this);			var l:URLLoader = new URLLoader();			l.addEventListener(Event.COMPLETE, onDataLoaded);			l.addEventListener(IOErrorEvent.IO_ERROR, onDataLoadError);			l.load( new URLRequest( url ) )
			
			
					}		protected function onDataLoaded( e:Event ) : void		{			Console.log("Success data loaded: "+e.target.data, this); // need to be changed to json			data = by.blooddy.crypto.serialization.JSON.decode( e.target.data );
			try 			{			headerText = data.header!=null ? data.header : "";			titleText = data.title!=null ? data.title : "";			bodyText = data.body!=null ? data.body : "";			if (data.weburl)			{				buttonText 	= data.buttonText!=null ? data.buttonText : "Explore";				website 	= data.weburl;				if (this.button)				{					this.button.visible = true;				}				} else {				if (this.button)				{					this.button.visible = false;				}			}			var imgs:Array = [];
			
			if (data.image_1!=null)
				imgs.push(data.image_1);
			if (data.image_2!=null)
				imgs.push(data.image_2);						Console.log("images:"+imgs,this);			imageURLs = imgs;			} catch (error:Error)			{				Console.log("error data loaded: "+e.target.data, this);				Console.log("error "+error.message, this);			}		}				protected function onDataLoadError( e:IOErrorEvent ) : void 		{			Console.log("Error: "+e.text, this);				this.dispatchEvent( new TemplateEvent( TemplateEvent.ERROR ) );		}				public function setupButton() : void		{			if (this.button!=null)			{				this.btn_delta = this.button.slant.x - (this.button.txt.x + this.button.txt.textWidth);				this.button.mouseChildren = false;				this.button.mouseEnabled = this.button.buttonMode = true;				this.button.addEventListener(MouseEvent.MOUSE_OVER, this.onBtnOver);				this.button.addEventListener(MouseEvent.MOUSE_OUT, this.onBtnOut);				this.button.addEventListener(MouseEvent.CLICK, this.onAction);				this.button.slant.icon.gotoAndStop("man");			}								}				protected function onAction( e:MouseEvent=null ):void		{									Console.log("Dispatch event - display:"+website, this);			this.dispatchEvent( new TemplateEvent( TemplateEvent.OPEN_URL, website ));			e.stopPropagation();		}				protected function test( e:Event = null ):void		{			headerText 	= "Which? Lorem Ipsum"           	titleText 	= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. ";			bodyText 	= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse sed felis ligula. Morbi id arcu id dui porta tristique eu et velit. Duis purus nisi, tempor ut lacus vitae, facilisis eleifend metus. Donec pretium libero eget dignissim porttitor. Integer quis ante vehicula, volutpat quam at, eleifend urna. Morbi ac lectus et sem sodales pellentesque. Sed at tortor nec magna egestas volutpat a sit amet dolor. Quisque odio lectus, malesuada et odio quis, varius vehicula massa. Phasellus a porttitor lacus, ac pretium tortor. Aliquam ac ultrices lectus. Donec volutpat lectus sed orci placerat posuere.";			buttonText 	= "Which? Lorem Ipsum";			website 	= "http://which.co.uk";			imageURLs 	= ["../userdata/random.jpg"];		}				protected function onBtnOver(e:MouseEvent) : void		{			e.target.alpha = 0.8;		}				protected function onBtnOut(e:MouseEvent) : void		{			e.target.alpha = 1;		}		        public function set titleText(s:String) : void        {            this.titleTLF.text = s;            this.titleTLF.autoSize = TextFieldAutoSize.LEFT;       			this.titleTLF.y = this.headerTLF.y + this.headerTLF.height+10		}        public function get titleText() : String        {            return this.titleTLF.text;        }        public function set headerText(s:String) : void        {            this.headerTLF.text = s;            this.headerTLF.autoSize = TextFieldAutoSize.LEFT;        }        public function get headerText() : String        {            return this.headerTLF.text;        }        public function set bodyText(s:String) : void        {            if (isNaN(this.body_divider_delta))            {                this.body_divider_delta =  this.bodyTLF.y + this.bodyTLF.textHeight;            }            if (isNaN(this.body_btn_delta))            {				if (this.button!=null)                this.body_btn_delta =  this.button.y;            }            this.bodyTLF.text = s;            this.bodyTLF.autoSize = TextFieldAutoSize.LEFT;			this.bodyTLF.y = this.titleTLF.y + this.titleTLF.height+20;                   }        public function get bodyText() : String        {            return this.bodyTLF.text;        }        public function set buttonText(s:String) : void        {			if (this.button!=null)			{				var tf:TextField = this.button.txt;				tf.text = s;				tf.autoSize = TextFieldAutoSize.LEFT;				this.button.slant.x = this.btn_delta + (tf.x + tf.textWidth);	            this.button.bg.width = this.button.slant.x + this.button.slant.width;			}        }        public function get buttonText() : String        {            return (this.button!=null) ? this.button.txt.text : null;        }		public function set imageURLs(urls:Array) : void        {			if (_imageURLs!=urls)			{				imageIndex = 0				loadImage( urls );			} 			_imageURLs = urls;        }		public function get imageURLs() : Array        {            return _imageURLs;        }				protected function loadImage( urls:Array ):void		{			Console.log("imageIndex:"+imageIndex,this);			if (imageIndex<urls.length)			{				var l:Loader = new Loader();				var imgurl:String = urls[imageIndex];				var regex:RegExp = new RegExp("(.png|.jpg)");				var imgurlHR:String = imgurl.replace(regex, "hr"+(imgurl.indexOf(".png")>=0 ? ".png" : ".jpg") );				l.contentLoaderInfo.addEventListener(Event.COMPLETE, imageLoaded );				l.contentLoaderInfo.addEventListener(IOErrorEvent.IO_ERROR, imageError );				l.load(  new URLRequest( imgurlHR )  );			} else {				isLoaded = true;				this.dispatchEvent( new TemplateEvent( TemplateEvent.LOADED ) );				Console.log("isLoaded:"+isLoaded+" "+this,this);			}		}				protected function imageLoaded( e:Event ):void		{			if (this.getChildByName("imageHolder"+(imageIndex+1))!=null)			{				var imageHolder:MovieClip = this["imageHolder"+(imageIndex+1)];
				Console.log("Bitmap: "+(e.target).url,this);
				
				try
				{
					bitmap = Bitmap( e.target.loader.content );
					bitmap.smoothing = true;
					imageHolder.img.bg.visible = false;
					var scaleFactor:Number = Math.min(imageHolder.img.bg.width/bitmap.width, imageHolder.img.bg.height/bitmap.height); 
					bitmap.scaleX = bitmap.scaleY = scaleFactor;
					imageHolder.img.addChild(bitmap);	
				} catch (error:Error)
				{
					Console.log("Error: "+error.message, this);
				}												}			imageIndex++;			loadImage( this.imageURLs)		}				protected function imageError( e:IOErrorEvent ):void		{			Console.log(e.text, this);			this.dispatchEvent( new TemplateEvent( TemplateEvent.ERROR ) );		}		    }}